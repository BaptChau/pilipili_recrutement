{% extends 'base.html.twig' %}

{% block body %}
{% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}
{% if data is empty %}

    <div class="jumbotron">
        <h1>Il n'y a pas de produits</h1>
    </div>
{% else %}


<table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th>Nom</th>
        <th>Description</th>
        <th>Marque</th>
        <th>Slug</th>
        <th>Date de Cr√©ation</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in data %}
        <tr>
            <td> {{product.id}} </td>
            <td> {{product.name}} </td>
            <td> {{product.description}} </td>
            <td> {{product.brandId.getName}} </td>
            <td> {{product.slug}} </td>
            <td> {{product.createdAt | date("d/m/y")}} </td>
            <td><a class="btn btn-primary" href="{{path('update_product', {id: product.id})}}">Modifier</a></td>

        </tr>
    {% endfor %}
    </tbody>
</table>

{% endif %}

{% endblock %}